@{
    ViewData["Title"] = "Dashboard";
    ViewData["Description"] = "Welcome to KSEB Management System";
    Layout = "~/Views/Shared/_KSEBLayout.cshtml";
}

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Stat Card 1 -->
    <div class="bg-white rounded-xl border border-gray-200 p-6 card-hover">
        <div class="flex items-center justify-between mb-4">
            <div class="p-3 bg-blue-50 rounded-lg">
                <i class="fas fa-users text-blue-600 text-lg"></i>
            </div>
            <span class="text-sm text-green-600 font-semibold">+12%</span>
        </div>
        <h3 class="text-3xl font-bold text-gray-800 mb-2">1,247</h3>
        <p class="text-gray-600">Total Users</p>
    </div>

    <!-- Stat Card 2 -->
    <div class="bg-white rounded-xl border border-gray-200 p-6 card-hover">
        <div class="flex items-center justify-between mb-4">
            <div class="p-3 bg-green-50 rounded-lg">
                <i class="fas fa-file-alt text-green-600 text-lg"></i>
            </div>
            <span class="text-sm text-green-600 font-semibold">+8%</span>
        </div>
        <h3 class="text-3xl font-bold text-gray-800 mb-2">342</h3>
        <p class="text-gray-600">Active Forms</p>
    </div>

    <!-- Stat Card 3 -->
    <div class="bg-white rounded-xl border border-gray-200 p-6 card-hover">
        <div class="flex items-center justify-between mb-4">
            <div class="p-3 bg-orange-50 rounded-lg">
                <i class="fas fa-tasks text-orange-600 text-lg"></i>
            </div>
            <span class="text-sm text-red-600 font-semibold">-3%</span>
        </div>
        <h3 class="text-3xl font-bold text-gray-800 mb-2">89</h3>
        <p class="text-gray-600">Pending Tasks</p>
    </div>

    <!-- Stat Card 4 -->
    <div class="bg-white rounded-xl border border-gray-200 p-6 card-hover">
        <div class="flex items-center justify-between mb-4">
            <div class="p-3 bg-purple-50 rounded-lg">
                <i class="fas fa-chart-line text-purple-600 text-lg"></i>
            </div>
            <span class="text-sm text-green-600 font-semibold">+24%</span>
        </div>
        <h3 class="text-3xl font-bold text-gray-800 mb-2">95%</h3>
        <p class="text-gray-600">System Uptime</p>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Recent Activity -->
    <div class="bg-white rounded-xl border border-gray-200 p-6">
        <div class="flex items-center justify-between mb-6">
            <h2 class="text-lg font-semibold text-gray-800">Recent Activity</h2>
            <a href="#" class="text-primary-600 hover:text-primary-700 text-sm font-medium">View All</a>
        </div>
        <div class="space-y-4">
            <!-- Activity items -->
            <div class="flex items-start space-x-3">
                <div class="w-10 h-10 bg-blue-50 rounded-full flex items-center justify-center mt-1">
                    <i class="fas fa-user-plus text-blue-600"></i>
                </div>
                <div class="flex-1">
                    <p class="text-gray-800">New user registered</p>
                    <p class="text-sm text-gray-500">John Doe joined the system</p>
                    <p class="text-xs text-gray-400 mt-1">2 minutes ago</p>
                </div>
            </div>
            <!-- Add more activity items -->
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white rounded-xl border border-gray-200 p-6">
        <h2 class="text-lg font-semibold text-gray-800 mb-6">Quick Actions</h2>
        <div class="grid grid-cols-2 gap-4">
            <a href="/Register" class="flex flex-col items-center justify-center p-4 bg-primary-50 border border-primary-100 rounded-lg hover:bg-primary-100 transition-colors">
                <i class="fas fa-user-plus text-primary-600 text-xl mb-2"></i>
                <span class="text-sm font-medium text-gray-800">Add User</span>
            </a>
            <a href="#" class="flex flex-col items-center justify-center p-4 bg-green-50 border border-green-100 rounded-lg hover:bg-green-100 transition-colors">
                <i class="fas fa-file-alt text-green-600 text-xl mb-2"></i>
                <span class="text-sm font-medium text-gray-800">Create Form</span>
            </a>
            <a href="#" class="flex flex-col items-center justify-center p-4 bg-orange-50 border border-orange-100 rounded-lg hover:bg-orange-100 transition-colors">
                <i class="fas fa-chart-bar text-orange-600 text-xl mb-2"></i>
                <span class="text-sm font-medium text-gray-800">Reports</span>
            </a>
            <a href="#" class="flex flex-col items-center justify-center p-4 bg-purple-50 border border-purple-100 rounded-lg hover:bg-purple-100 transition-colors">
                <i class="fas fa-cog text-purple-600 text-xl mb-2"></i>
                <span class="text-sm font-medium text-gray-800">Settings</span>
            </a>
        </div>
    </div>
</div>