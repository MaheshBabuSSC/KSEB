@* Views/Shared/FormsSidebar.cshtml *@
@{
    var forms = ViewBag.Forms as List<KSEB.Models.FormSummary> ??
                ViewData["ActiveForms"] as List<KSEB.Models.FormSummary> ??
                new List<KSEB.Models.FormSummary>();
}

@if (forms.Any())
{
    <div class="space-y-1">
        <div class="flex items-center gap-3 px-4 py-2">
            <i class="fa-solid fa-file-lines w-5 h-5 text-primary-600"></i>
            <span class="nav-text text-gray-700">Forms (@forms.Count)</span>
        </div>

        <div class="ml-8 space-y-1">
            @foreach (var form in forms.Where(f => f.IsActive).OrderBy(f => f.FormTitle))
            {
                <a asp-controller="FormBuilder"
                   asp-action="SubmitForm"
                   asp-route-id="@form.FormId"
                   class="flex items-center gap-2 px-3 py-2 rounded hover:bg-primary-50 hover:text-primary-600 text-sm transition-colors">
                    <i class="fa-solid fa-file text-xs text-green-500"></i>
                    <span class="truncate">@form.FormTitle</span>
                </a>
            }
        </div>
    </div>
}
else
{
    <div class="space-y-1">
        <div class="flex items-center gap-3 px-4 py-2 rounded text-gray-500">
            <i class="fa-solid fa-file-lines w-5 h-5"></i>
            <span class="nav-text">No Forms</span>
        </div>
    </div>
}