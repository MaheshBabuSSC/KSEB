<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KSEB Electricity Management</title>

    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">
    <!-- Header -->
    <header class="sticky top-0 z-50 bg-white shadow-md">
        <nav class="container mx-auto px-4 py-4">
            <div class="flex flex-col md:flex-row justify-between items-center gap-4">
                <!-- Logo Section -->
                <div class="flex items-center gap-3">
                    <div class="bg-kseb-blue text-white p-3 rounded-xl">
                        <i class="fas fa-bolt text-2xl"></i>
                    </div>
                    <div>
                        <h1 class="text-2xl font-bold text-gray-900">KSEB</h1>
                        <p class="text-sm text-gray-600">Kerala State Electricity Board</p>
                    </div>
                </div>

                <!-- Navigation -->
                <div class="flex flex-wrap justify-center gap-2">
                    <a asp-controller="Home" asp-action="Index" class="nav-link">
                        <i class="fas fa-home mr-2"></i>Dashboard
                    </a>
                    <a href="#" class="nav-link">
                        <i class="fas fa-users mr-2"></i>Consumers
                    </a>
                    <a href="#" class="nav-link">
                        <i class="fas fa-file-invoice-dollar mr-2"></i>Billing
                    </a>
                    <a href="#" class="nav-link">
                        <i class="fas fa-chart-bar mr-2"></i>Reports
                    </a>
                    <a asp-controller="Home" asp-action="Privacy" class="nav-link">
                        <i class="fas fa-shield-alt mr-2"></i>Privacy
                    </a>
                </div>

                <!-- User Actions -->
                <div class="flex items-center gap-3">
                    <div class="relative">
                        <i class="fas fa-bell text-gray-600 text-xl cursor-pointer hover:text-kseb-blue"></i>
                        <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center">3</span>
                    </div>
                    <button class="btn-kseb">
                        <i class="fas fa-sign-in-alt mr-2"></i>Login
                    </button>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="flex-grow container mx-auto px-4 py-8">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white mt-12">
        <div class="container mx-auto px-6 py-8">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <!-- About -->
                <div>
                    <h3 class="text-xl font-bold mb-4 flex items-center gap-2">
                        <i class="fas fa-bolt text-yellow-400"></i> KSEB
                    </h3>
                    <p class="text-gray-300 text-sm leading-relaxed">
                        Empowering Kerala with reliable electricity since 1957.
                        Committed to sustainable energy and excellent service.
                    </p>
                </div>

                <!-- Quick Links -->
                <div>
                    <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
                    <ul class="space-y-2">
                        <li><a href="#" class="text-gray-300 hover:text-white flex items-center gap-2"><i class="fas fa-plug text-sm"></i> New Connection</a></li>
                        <li><a href="#" class="text-gray-300 hover:text-white flex items-center gap-2"><i class="fas fa-credit-card text-sm"></i> Pay Bill Online</a></li>
                        <li><a href="#" class="text-gray-300 hover:text-white flex items-center gap-2"><i class="fas fa-file-alt text-sm"></i> Download Forms</a></li>
                        <li><a href="#" class="text-gray-300 hover:text-white flex items-center gap-2"><i class="fas fa-chart-line text-sm"></i> Consumption Tracker</a></li>
                    </ul>
                </div>

                <!-- Emergency -->
                <div>
                    <h4 class="text-lg font-semibold mb-4">Emergency Contacts</h4>
                    <div class="space-y-3">
                        <div class="flex items-center gap-3">
                            <div class="bg-red-500 p-2 rounded-full">
                                <i class="fas fa-phone text-white"></i>
                            </div>
                            <div>
                                <p class="font-medium">24/7 Emergency</p>
                                <p class="text-gray-300">Toll Free: 1912</p>
                            </div>
                        </div>
                        <div class="flex items-center gap-3">
                            <div class="bg-blue-500 p-2 rounded-full">
                                <i class="fas fa-envelope text-white"></i>
                            </div>
                            <div>
                                <p class="font-medium">Email Support</p>
                                <p class="text-gray-300">support@kseb.in</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Social -->
                <div>
                    <h4 class="text-lg font-semibold mb-4">Connect With Us</h4>
                    <div class="flex gap-4">
                        <a href="#" class="bg-gray-700 p-3 rounded-full hover:bg-blue-600 transition">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="bg-gray-700 p-3 rounded-full hover:bg-blue-400 transition">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="bg-gray-700 p-3 rounded-full hover:bg-blue-700 transition">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                        <a href="#" class="bg-gray-700 p-3 rounded-full hover:bg-red-500 transition">
                            <i class="fab fa-youtube"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Copyright -->
            <div class="border-t border-gray-700 mt-8 pt-6 text-center text-gray-400 text-sm">
                <p>&copy; @DateTime.Now.Year - Kerala State Electricity Board. All Rights Reserved.</p>
                <p class="mt-2">Developed with <i class="fas fa-heart text-red-400"></i> using ASP.NET Core & PostgreSQL</p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>